<div class="admin-title">
  <h2>Add New Post</h2>
</div>

<form action="/add-post" method="POST" enctype="multipart/form-data" class="add-post-form">

  <div class="post-title">
    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title" required>
  </div>

  <div class="post-image">
    <label for="postImage"><b>Post Image</b></label>
    <input type="file" name="blogImage">
  </div>

  <div class="post-content">
    <label for="body"><b>Content</b></label>
    <textarea name="body" cols="50" rows="10"></textarea>
  </div>

  <input type="submit" value="Add" class="btn">

</form>